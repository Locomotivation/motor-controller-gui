{
    "compilerOptions": {
        "baseUrl": ".",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "./dist/",
        "paths": {
            "@shared/*": ["./src/shared/*"]
        },
        "removeComments": true,
        "target": "es5"
    },
    "exclude": ["./node_modules"],
    "include": ["./src/**/*"]
}
